<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="weather-container">
      <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
          <h1 class="app-title"><i class="fas fa-cloud-sun me-3"></i>Weather App</h1>
          <p class="app-subtitle">Get real-time weather information for any city</p>
        </div>

        <!-- Search Form -->
        <div class="row justify-content-center">
          <div class="col-md-8 col-lg-6">
            <div class="search-card">
              <form action="/weather" method="POST" class="d-flex">
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-0">
                    <i class="fas fa-search text-primary"></i>
                  </span>
                  <input type="text" class="form-control search-input" name="city" autocomplete="off" placeholder="Enter city name..." required />
                  <button class="btn btn-primary search-btn" type="submit">Get Weather</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
        <div class="row justify-content-center mt-4">
          <div class="col-md-8">
            <div class="alert alert-danger alert-dismissible fade show error-alert" role="alert">
              <i class="fas fa-exclamation-triangle me-2"></i>
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          </div>
        </div>
        <% } %>

        <!-- Weather Display -->
        <% if (weather) { %>
        <div class="row justify-content-center mt-5">
          <div class="col-lg-10">
            <div class="weather-card">
              <!-- Main Weather Info -->
              <div class="row align-items-center mb-4">
                <div class="col-md-6 text-center text-md-start">
                  <div class="location-info mb-3">
                    <h2 class="city-name">
                      <i class="fas fa-map-marker-alt text-primary me-2"></i>
                      <%= weather.city %>, <%= weather.country %>
                    </h2>
                    <p class="current-time" id="currentTime"></p>
                  </div>

                  <div class="main-temp">
                    <span class="temperature"><%= weather.temperature %>°C</span>
                    <div class="feels-like">Feels like <%= weather.feelsLike %>°C</div>
                  </div>
                </div>

                <div class="col-md-6 text-center">
                  <div class="weather-icon-container">
                    <img src="https://openweathermap.org/img/wn/<%= weather.icon %>@4x.png" alt="<%= weather.description %>" class="weather-icon" />
                    <p class="weather-description"><%= weather.description %></p>
                  </div>
                </div>
              </div>

              <!-- Weather Details -->
              <div class="weather-details">
                <div class="row g-4">
                  <div class="col-sm-6 col-lg-3">
                    <div class="detail-card">
                      <div class="detail-icon">
                        <i class="fas fa-tint"></i>
                      </div>
                      <div class="detail-info">
                        <h4>Humidity</h4>
                        <p><%= weather.humidity %>%</p>
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-6 col-lg-3">
                    <div class="detail-card">
                      <div class="detail-icon">
                        <i class="fas fa-wind"></i>
                      </div>
                      <div class="detail-info">
                        <h4>Wind Speed</h4>
                        <p><%= weather.windSpeed %> m/s</p>
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-6 col-lg-3">
                    <div class="detail-card">
                      <div class="detail-icon">
                        <i class="fas fa-thermometer-half"></i>
                      </div>
                      <div class="detail-info">
                        <h4>Pressure</h4>
                        <p><%= weather.pressure %> hPa</p>
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-6 col-lg-3">
                    <div class="detail-card">
                      <div class="detail-icon">
                        <i class="fas fa-eye"></i>
                      </div>
                      <div class="detail-info">
                        <h4>Visibility</h4>
                        <p><%= weather.visibility %> km</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>

        <!-- Initial State -->
        <% if (!weather && !error) { %>
        <div class="row justify-content-center mt-5">
          <div class="col-md-8 text-center">
            <div class="welcome-message">
              <i class="fas fa-sun weather-welcome-icon"></i>
              <h3>Welcome to Weather App</h3>
              <p class="text-muted">Enter a city name above to get started with real-time weather information</p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
  </body>
</html>
